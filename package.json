    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-webpack-plugin": "^3.2.0",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
